                                                                        % else:
                                                                            00
                                                                        % endif

                                                                        % if line.product_id.temple_size:
                                                                            ${line.product_id.temple_size.name}
                                                                        % else:
                                                                            00
                                                                        % endif

                                                                        % if line.product_id.categ_id:
                                                                            (${line.product_id.categ_id.name})
                                                                        % endif
