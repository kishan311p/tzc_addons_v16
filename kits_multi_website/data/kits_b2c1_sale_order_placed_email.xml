                                                                        .te_ribbon-wrapper kits_ribbon #style_3.label_div {
                                                                            display: inline-block;
                                                                            width: auto;
                                                                            font-size: 0.8125rem;
                                                                            background-color: #353e47;
                                                                            position: absolute;
                                                                            top: 10px;
                                                                            right: unset;
                                                                            bottom: unset;
                                                                            left: 0px;
                                                                            z-index: 1;
                                                                            overflow: hidden;
