<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>

        <record id="kits_multi_website_sign_up_otp_form_view" model="ir.ui.view">
            <field name="name">kits.multi.website.sign.up.otp.form.view</field>
            <field name="model">kits.multi.website.sign.up.otp</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="otp" />
                                <field name="otp_validity" />
                            </group>
                            <group>
                                <field name="email" />
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="kits_multi_website_sign_up_otp_tree_view" model="ir.ui.view">
            <field name="name">kits.multi.website.sign.up.otp.tree.view</field>
            <field name="model">kits.multi.website.sign.up.otp</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="otp" />
                    <field name="otp_validity" />
                    <field name="email" />
                </tree>
            </field>
        </record>

        <record id="kits_multi_website_sign_up_otp_action" model="ir.actions.act_window">
            <field name="name">Sign Up OTP</field>
            <field name="res_model">kits.multi.website.sign.up.otp</field>
            <field name="view_mode">tree,form</field>
        </record>

    </data>
</odoo>