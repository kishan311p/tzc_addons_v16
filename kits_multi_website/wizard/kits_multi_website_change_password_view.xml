<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>

        <record id="kits_multi_website_change_password_form_view" model="ir.ui.view">
            <field name="name">kits.multi.website.change.password.form.view</field>
            <field name="model">kits.multi.website.change.password</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="email" readonly="1" force_save="1"/>
                            </group>
                            <group>
                                <field name="new_password" />
                                <field name="customer_id" invisible="1" />
                            </group>
                        </group>
                    </sheet>
                    <footer>
                        <button string="Change Password" name="action_change_password" type="object" class="oe_highlight"/>
                        <button string="Cancel" special="cancel" class="btn-secondary"/>
                    </footer>
                </form>
            </field>
        </record>

    </data>
</odoo>