<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>

        <record id="kits_sale_order_line_select_wizard_form_view" model="ir.ui.view">
            <field name="name">kits.sale.order.line.select.wizard.form.view</field>
            <field name="model">kits.sale.order.line.select.wizard</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="return_line_ids" widget="many2many_tags" options="{'no_create': true}"/>
                        </group>
                    </sheet>
                    <footer>
                        <button string="Process" name="action_process" type="object" class="oe_highlight"/>
                        <button string="Cancel" special="cancel" class="btn-secondary"/>
                    </footer>
                </form>
            </field>
        </record>

    </data>
</odoo>
