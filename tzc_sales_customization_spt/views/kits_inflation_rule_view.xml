<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>
        <record id="kits_inflation_rule_view_tree" model="ir.ui.view">
            <field name="name">kits.inflation.rule.view.tree</field>
            <field name="model">kits.inflation.rule</field>
            <field name="arch" type="xml">
                <tree editable="bottom">
                    <field name="country_id" widget="many2many_tags" options="{'no_create':True,'no_open':True,'no_create_edit':True}"/>
                    <field name="brand_ids" widget="many2many_tags" options="{'no_create':True,'no_open':True,'no_create_edit':True}"/>
                    <field name="inflation_rate" />
                </tree>
            </field>
        </record>
    </data>
</odoo>