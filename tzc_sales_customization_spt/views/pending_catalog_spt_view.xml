<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="pending_catalog_tree_view_spt" model="ir.ui.view">
            <field name="name">pending.catalog.tree.view.spt</field>
            <field name="model">pending.catalog.spt</field>
            <field name="arch" type="xml">
                <tree editable="bottom">
                    <field name="customer_id"/>
                    <field name="catalog_id"/>
                    <field name="execution_time"/>
                    <field name="state"/>
                    <field name="user_id" invisible="1"/>
                    <button name="send_pending_catalog_spt" attrs="{'invisible': [('state','=','sent')]}" type="object" string="Send Now" class="oe_highlight" />
                </tree>
            </field>
        </record>

        <record id="action_pending_catalog_spt" model="ir.actions.act_window">
            <field name="name">Report Catalog</field>
            <field name="res_model">pending.catalog.spt</field>
            <field name="view_mode">tree</field>
            <field name="context">{'create':0,'edit':0}</field>
        </record>
<menuitem id="menu_main_sale_catalog" name="Catalogs" parent="sale.sale_menu_root" sequence="5"/>
	<menuitem id="menu_pending_catalog_spt" name="Report Catalog" action="action_pending_catalog_spt" parent="menu_main_sale_catalog" sequence="4"/>

    </data>
</odoo>
