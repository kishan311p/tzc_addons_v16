<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>
        <record id="warning_message_wizard_view_form" model="ir.ui.view">
            <field name="name">warning.message.wizard.view.form</field>
            <field name="model">kits.warning.message.wizard</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <h2>
                            <field name="message" nolable='1' readonly='1' style="color:red;"/>
                        </h2>
                    </sheet>
                    <footer>
                        <button name="action_archive_contact" type="object" string="Continue" class="oe_highlight"/>
                        <span style="padding-left:5px !important;margin-right:5px !important;">OR</span>
                        <button special="cancel" type="object" string="Cancel" />
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>