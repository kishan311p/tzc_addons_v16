<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>
        <record id="catalog_process_error_wizard_spt_form_view" model="ir.ui.view">
            <field name="name">catalog.process.error.wizard.spt.form.view</field>
            <field name="model">catalog.process.error.wizard.spt</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <div invisible="context.get('zero_qty', False)">
                            <h2 style="color:grey" >Below Products will be removed because of Zero Quantity.</h2>
                            <field name="zero_qty_products" nolable="1" readonly="1">
                                <tree>
                                    <field name="product_pro_id" options="{'no_create': True}"/>
                                    <field name="product_qty_available" string="Total QTY" invisible="context.get('total_spt', False)"/>
                                    <field name="actual_available_qty" invisible="context.get('available_spt', False)"/>
                                    <!-- <field name="qty_available_spt" invisible="context.get('available_spt', False)"/> -->
                                </tree>
                            </field>
                        </div>
                        <div invisible="context.get('available_qty', False)">
                            <h2 style="color:grey" invisible="context.get('available_spt', False)">Below products will be reset to available quantity.</h2>
                            <h2 style="color:grey" invisible="context.get('total_spt', False)">Below products will be  reset to total quantity.</h2>
                            <field name="managed_qty_products" nolable="1" readonly="1">
                                <tree>
                                    <field name="product_pro_id" options="{'no_create': True}"/>
                                    <field name="product_qty_available" string="Total QTY" invisible="context.get('total_spt', False)"/>
                                    <field name="qty_available_spt" invisible="context.get('available_spt', False)"/>
                                </tree>
                            </field>
                        </div>
                    </sheet>
                    <footer>
                        <button name="btn_process" type="object" string="Process" class="oe_highlight" />
                        <span style="margin-left:5px;margin-right:5px;">
                            OR
                        </span>
                        <button special="cancel" type="object" string="Cancel"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>
