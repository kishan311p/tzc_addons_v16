<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>
        <record id="paid_amount_wizard_view_form" model="ir.ui.view">
            <field name="name">paid.amount.wizard.view.form</field>
            <field name="model">paid.amount.wizard</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="date" required="1"/>
                                <field name="payment_method" required="1"/>
                                <field name="amount" required="1"/>
                            </group>
                            <group>
                                <field name="description" />
                            </group>
                        </group>
                    </sheet>
                    <footer>
                        <button string="Pay" name="action_pay" type="object" class="oe_highlight"/>
                        <button string="Cancel" class="oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>
