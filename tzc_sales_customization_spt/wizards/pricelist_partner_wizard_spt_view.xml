<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="pricelist_partner_wizard_from_view_spt" model="ir.ui.view">
            <field name="name">pricelist.partner.wizard.from.view.spt</field>
            <field name="model">pricelist.partner.wizard.spt</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>

                        <group>
                            <group>
                                <field name="property_product_pricelist"/>
                            </group>
                            <group>
                                <field name="partner_ids" invisible="1" widget="many2many_tags"/>
                            </group>

                        </group>

                    </sheet>
                    <footer>
                        <button string="Process" class="btn btn-primary" type="object" name="action_process" />
                        <button string="Cancel" class="btn-secondary" special="cancel" />
                    </footer>
                </form>

            </field>
        </record>

    </data>
</odoo>

