                                                    <p>
                                                        <a t-attf-href="{{object.get_portal_url()}}//catalog-details?catalog_id={{object.id}}" style="background-color:#1F7B6F !important;padding: 10px; text-decoration: none; color: #fff; border-radius: 5px; font-size: 16px;" class="o_default_snippet_text">
