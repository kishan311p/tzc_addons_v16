<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>
        <record id="partner_country_change_notify_admin_mail_template" model="mail.template">
            <field name="name">Partner Country Change | Notify Admin</field>
            <field name="email_from">"ETO-Support" &lt;${(object.user_id.company_id.catchall or user.email)|safe}&gt;</field>
            <!-- <field name="email_from">${ |safe}</field> -->
            <field name="subject">Sales Manager ${object.env.user.name} has changed country.</field>
            <field name="model_id" ref="base.model_res_partner"/>
            <field name="auto_delete" eval="False"/>
            <field name="lang">${object.lang}</field>
            <field name="body_html" type="html">
                <table border="0" cellpadding="0" cellspacing="0" style="padding-top: 16px; background-color: #F1F1F1; font-family:Verdana, Arial,sans-serif; color: #454748; width: 100%; border-collapse:separate;">
                    <tr>
                        <td align="center">
                            <table border="0" cellpadding="0" cellspacing="0" style="padding: 24px; background-color: white; color: #454748; border-collapse:separate;">
                                <tbody>
                                    <!-- HEADER -->
                                    <tr>
                                        <td align="center" style="min-width: 590px;">
                                            <t>
                                                % if object.env.cr.dbname != 'eto_production'
                                                <div class="corner-ribbon" style="top: 5%;position:absolute;width: 165px;font-weight: bold;color: #dc0e0e;font-size: 36px;text-align: center;">TEST</div>
                                                % endif
                                            </t>
                                            <table width="590" border="0" cellpadding="0" bgcolor="#7693f8" style="min-width: 590px; background-color: transparent;order-collapse:separate;">
                                                <tr>
                                                    <td valign="middle" style="width: 245px;">
                                                        <span style="font-size:20px;font-weight: bold;">
                                                            ${object.name}
                                                        </span>
                                                    </td>
                                                    <td valign="middle" align="right" width="50%">
                                                        <img src="/web/image?model=res.company&amp;id=1&amp;field=logo" style="padding:0px;margin: 0px; height: auto; width: 95%;" alt="${object.company_id.name or 'Everything Optical (ETO)'}" class="padding-small"/>
                                                    </td>
                                                </tr>
                                                <tr>
                                                    <td colspan="2" style="text-align:center;">
                                                        <hr width="100%" style="background-color:rgb(204,204,204);border:medium none;clear:both;display:block;font-size:0px;min-height:1px;line-height:0; margin:0px;"/>
                                                    </td>
                                                </tr>
                                            </table>
                                        </td>
                                    </tr>
                                    <!-- CONTENT -->
                                    <td align="center" style="min-width: 590px;">
                                        <table border="0" cellpadding="0" cellspacing="0" width="590" style="min-width: 590px; background-color: white; padding: 0px 8px 0px 8px; border-collapse:separate;">
                                            <tr>
                                                <td valign="top" style="font-size: 13px;">
                                                    <div>
                                                        % set receiver = object.env.context.get('recipient')
                                                        % if receiver:
                                                        <p style="margin-top:0px;">Hello ${receiver},</p>
                                                        % else:
                                                        <p style="margin-top:0px;">Hello ,</p>
                                                        % endif
                                                        <!-- <br/> -->
                                                        % if object.country_id.id:
                                                            <p>${object.env.user.name} has changed the country to "${object.country_id.name}" for the client "${object.name}".
                                                            % set order_names = object.give_required_sale_orders_names(object.sale_order_ids,['cancel','merged','draft_inv','open_inv','paid'])
                                                            % if order_names:
                                                                <br/>
                                                                Currency, Pricelist and Fiscal position of following orders will be changed.Please review following quotation for the pricing if needed:<br/> ${','.join(order_names)}
                                                            % endif
                                                        % endif
                                                        % if not object.country_id.id:
                                                            ${object.env.user.name} removed the country of customer "${object.name}".</p>
                                                        % endif
                                                        <p style="margin-bottom:0px;">Thank you,<br/>
                                                            ETO Support
                                                        </p>
                                                    </div>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td style="text-align:center;">
                                                    <hr width="100%" style="background-color:rgb(204,204,204);border:medium none;clear:both;display:block;font-size:0px;min-height:1px;line-height:0; margin: 16px 0px 16px 0px;"/>
                                                </td>
                                            </tr>
                                        </table>
                                    </td>
                                    <!-- FOOTER -->
                                    <tr>
                                        <td align="center" style="min-width: 590px;">
                                            <table border="0" cellpadding="0" cellspacing="0" width="590" style="min-width: 590px; background-color: white; font-size: 11px; padding: 0px 8px 0px 8px; border-collapse:separate;">
                                                <tr>
                                                    <td valign="middle" align="left">
                                                        ${object.env['res.company'].browse(1).name}
                                                    </td>
                                                </tr>
                                                <tr>
                                                    <td valign="middle" align="left" style="opacity: 0.7;">
                                                        ${object.env['res.company'].browse(1).phone}
                                                        % if object.env['res.company'].browse(1).email
                                                        |                                                        <a href="'mailto:%s' % ${object.env['res.company'].browse(1).email}" style="text-decoration:none; color: #454748;">${object.env['res.company'].browse(1).email}</a>
                                                        % endif
                                                        % if object.env['res.company'].browse(1).website
                                                            |                                                        <a href="'%s' % ${object.env['res.company'].browse(1).website}" style="text-decoration:none; color: #454748;">
                                                            ${object.env['res.company'].browse(1).website}
                                                        </a>
                                                        % endif
                                                    </td>
                                                </tr>
                                            </table>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </td>
                    </tr>
                    <!-- POWERED BY -->
                    <tr>
                        <td align="center" style="min-width: 590px;">
                            <table border="0" cellpadding="0" cellspacing="0" width="590" style="min-width: 590px; background-color: #F1F1F1; color: #454748; padding: 8px; border-collapse:separate;">
                                <tr>
                                    <td style="text-align: center; font-size: 13px;">
                                    Powered by <a target="_blank" href="www.teameto.com" style="color: #7693f8;">ETO</a>
                                    </td>
                                </tr>
                            </table>
                        </td>
                    </tr>
                </table>

            </field>
        </record>

