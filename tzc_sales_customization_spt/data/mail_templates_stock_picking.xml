<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">

        <record id="tzc_picking_ready_notification_to_salesperson_spt" model="mail.template">
            <field name="name">Picking Ready Notification To Salesperson</field>
            <!-- <field name="email_from">${user.email_formatted | safe}</field> -->
            <field name="email_from">{{object.sale_id.user_id.email}}</field>
            <field name="subject">{{object.partner_id.name}} has confirmed their order {{object.sale_id.name}} Warehouse.</field>
            <field name="email_to">{{object.get_wh_user()}}</field>
            <!-- <field name="email_to">${(object.sale_id.user_id.email and '%s &lt;%s&gt;' % (object.sale_id.user_id.partner_id.name, object.sale_id.user_id.email) or '')|safe}</field> -->
            <field name="model_id" ref="stock.model_stock_picking"/>
            <field name="auto_delete" eval="False"/>
            <!-- <field name="report_template" ref="sale.action_report_saleorder"/> -->
            <!-- <field name="report_name">Sale Order ${(object.sale_id.name or '')}</field> -->
            <field name="lang">{{object.sale_id.user_id.partner_id.lang}}</field>
            <field name="body_html" type="html">
                <table border="0" cellpadding="0" cellspacing="0" style="padding-top: 16px; background-color: #F1F1F1; font-family:Verdana, Arial,sans-serif; color: #454748; width: 100%; border-collapse:separate;">
                    <tr>
                        <td align="center">
                            <table border="0" cellpadding="0" cellspacing="0" width="590" style="padding: 16px; background-color: white; color: #454748; border-collapse:separate;">
                                <tbody>
                                    <!-- HEADER -->
                                    <tr>
                                        <td align="center" style="min-width: 590px;">
                                            <t>
                                                <t t-if="object.env.cr.dbname != 'eto_production'">
                                                    <div class="corner-ribbon" style="top: 5%;position:absolute;width: 165px;font-weight: bold;color: #dc0e0e;font-size: 36px;text-align: center;">TEST</div>
                                                </t>
                                            </t>
                                            <table border="0" cellpadding="0" cellspacing="0" width="590" style="min-width: 590px; background-color: white; padding: 0px 8px 0px 8px; border-collapse:separate;">
                                                <tr>
                                                    <td valign="middle" style="width: 245px;">
                                                        <!-- <span style="font-size: 10px;">Your Order</span>
                                                        <br/> -->
                                                        <span style="font-size: 20px; font-weight: bold;">
                                                            <t t-out="object.sale_id.name"/> 
                                                        </span>
                                                    </td>
                                                    <td valign="middle" style="width: 145px;" align="right">
                                                        <img t-attf-src="/web/image?model=res.company&amp;id=1&amp;field=logo" style="padding: 0px; margin: 0px; height: auto; width: 280px;" alt="object.sale_id.user_id.company_id.name"/>
                                                    </td>
                                                </tr>
                                                <tr>
                                                    <td colspan="2" style="text-align:center;">
                                                        <hr width="100%" style="background-color:rgb(204,204,204);border:medium none;clear:both;display:block;font-size:0px;min-height:1px;line-height:0; margin:16px 0px 16px 0px;"/>
                                                    </td>
                                                </tr>
                                            </table>
                                        </td>
                                    </tr>
                                    <!-- CONTENT -->
                                    <td align="center" style="min-width: 590px;">
                                        <table border="0" cellpadding="0" cellspacing="0" width="590" style="min-width: 590px; background-color: white; padding: 0px 8px 0px 8px; border-collapse:separate;">
                                            <tr>
                                                <td valign="top" style="font-size: 13px;">
                                                    <p style="margin-top:0px;">Hello <t t-out="object.env['res.users'].search([('is_warehouse','=',True)],limit=1).name"/> ,</p>
                                                    <p>Customer <t t-out="object.sale_id.partner_id.name"/> has confirmed their order <t t-out="object.sale_id.name"/>.<br/>Please prepare the order and await further instructions from the Account Manager <t t-out="object.sale_id.user_id.name"/>.</p>
                                                    <p>
                                                        <a t-attf-href="object.get_base_url()/web#id=object.sale_id.id&amp;action=object.env.ref('website_sale.action_orders_ecommerce').id&amp;model=sale.order&amp;view_type=form" target="_blank" style="background-color: #7693f8; padding: 8px 16px 8px 16px; text-decoration: none; color: #fff; border-radius: 5px; font-size:13px;">
                                                            View order
                                                        </a>
                                                    </p>
                                                    <p style="margin-bottom:0px;">Thank you,<br/>ETO Support</p>
                                                    <a t-attf-href="object.get_base_url()/report/pdf/sale.report_saleorder/object.sale_id.id">
                                                        <img t-attf-src="/tzc_sales_customization_spt/static/src/img/pdf.png" style="height:60px;width:100px;"/>
                                                    </a>
                                                    <p>
                                                        <t t-if="object.sale_id.user_id.signature">
                                                           <t t-out="object.sale_id.user_id.signature"/> 
                                                        </t>
                                                    </p>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td style="text-align:center;">
                                                    <hr width="100%" style="background-color:rgb(204,204,204);border:medium none;clear:both;display:block;font-size:0px;min-height:1px;line-height:0; margin: 16px 0px 16px 0px;"/>
                                                </td>
                                            </tr>
                                        </table>
                                    </td>
                                    <!-- FOOTER -->
                                    <tr>
                                        <td align="center" style="min-width: 590px;">
                                            <table border="0" cellpadding="0" cellspacing="0" width="590" style="min-width: 590px; background-color: white; font-size: 11px; padding: 0px 8px 0px 8px; border-collapse:separate;">
                                                <tr>
                                                    <td valign="middle" align="left">
                                                        <t t-out="object.sale_id.user_id.company_id.name"/>
                                                    </td>
                                                </tr>
                                                <tr>
                                                    <td valign="middle" align="left" style="opacity: 0.7;">
                                                        <t t-out="object.sale_id.user_id.company_id.phone"/>
                                                        <t t-if="object.sale_id.user_id.company_id.email">
                                                        |                                                        <a t-attf-href="'mailto:%s' % object.sale_id.user_id.company_id.email" style="text-decoration:none; color: #454748;"><t t-out="object.sale_id.user_id.company_id.email"/> </a>
                                                        </t>
                                                        <t t-if="object.sale_id.user_id.company_id.website">
                                                        |                                                        <a t-attf-href="'%s' % object.sale_id.user_id.company_id.website" style="text-decoration:none; color: #454748;">
                                                            <t t-out="object.sale_id.user_id.company_id.website"/>
                                                        </a>
                                                        </t>
                                                        
                                                    </td>
                                                </tr>
                                            </table>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </td>
                    </tr>
                    <!-- POWERED BY -->
                    <tr>
                        <td align="center" style="min-width: 590px;">
                            <table border="0" cellpadding="0" cellspacing="0" width="590" style="min-width: 590px; background-color: #F1F1F1; color: #454748; padding: 8px; border-collapse:separate;">
                                <tr>
                                    <td style="text-align: center; font-size: 13px;">
                                    Powered by <a target="_blank" href="www.teameto.com" style="color: #7693f8;">ETO</a>
                                    </td>
                                </tr>
                            </table>
                        </td>
                    </tr>
                </table>
            </field>
        </record>

    </data>
</odoo>
