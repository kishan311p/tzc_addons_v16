<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="kits_b2b_menus_view_form" model="ir.ui.view">
        <field name="name">kits.b2b.menus.view.form</field>
        <field name="model">kits.b2b.menus</field>
        <field name="arch" type="xml">
            <form string="">
                <sheet>
                    <div>
                        <h2>
                            <field name="name" />
                        </h2>
                    </div>
                    <group>
                        <group>
                            <field name="menu_type" />
                            <field name="redirect_url" attrs="{'invisible':[('menu_type','not in',['redirect','dashboard'])]}" />
                            <field name="query_params" attrs="{'invisible':[('menu_type','!=','filter')]}" />
                        </group>
                        <group>
                            <field name="website_id" />
                            <field name="in_more" attrs="{'invisible':[('menu_type','not in',['redirect','filter'])]}" />
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>


    <record id="kits_b2b_menus_view_tree" model="ir.ui.view">
        <field name="name">kits.b2b.menus.view.tree</field>
        <field name="model">kits.b2b.menus</field>
        <field name="arch" type="xml">
            <tree string="">
                <field name="sequence" widget="handle"/>
                <field name="name" />
                <field name="redirect_url" readonly="1"/>
                <field name="website_id" />
            </tree>
        </field>
    </record>


    <record id="kits_b2b_menus_action" model="ir.actions.act_window">
        <field name="name">Action Name</field>
        <field name="res_model">kits.b2b.menus</field>
        <field name="view_mode">tree,form</field>
    </record>


</odoo>
